{
  "type": "object",
  "required": ["name", "labels", "storage", "accessMode", "reclaim"],
  "properties": {
    "name": {
      "type": "string",
      "default": "my-service"
    },
    "namespace": {
      "type": "string",
      "default": "default"
    },
    "labels": {
      "type": "string",
      "default": "pv: nginx"
    },
    "storage": {
      "type": "string"
    },
    "accessMode": {
      "type": "string",
      "default": "ReadWriteOnce",
      "enum": [
        "ReadWriteOnce",
        "ReadOnlyMany",
        "ReadWriteMany",
        "ReadWriteOncePod"
      ]
    },
    "reclaim": {
      "type": "string",
      "default": "Retain",
      "enum": [
        "Retain",
        "Recycle",
        "Delete"
      ]
    }
  }
}